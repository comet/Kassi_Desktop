.new_listing_form_field_container
  %label{:class => "input"}
    =  t('.valid_until') + "*:"
    %br/
    %span{:class => "smaller"}  
      = link_to t('common.what_is_this'), "#", :tabindex => "-1", :id => "help_valid_until_link"
  - if @listing.listing_type.eql?("offer")
    = render :partial => "listings/form/valid_until_radio_buttons"
  - else
    = date_select(:listing, :valid_until, {:start_year => Time.now.year, :end_year => Time.now.year + 1, :default => 3.months.from_now}, :class => "listing_date_select")