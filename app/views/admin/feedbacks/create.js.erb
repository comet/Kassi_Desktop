/* Display notice */
$("#notification_container").html("<%= escape_javascript(render(:partial => 'layouts/notifications')) %>");
 
/* Reset the feedback form */
$("#new_feedback")[0].reset();

/* Enable send button */
$('#new_feedback input[type=submit]').removeAttr('disabled');
$('#new_feedback input[type=submit]').val('<%= t("layouts.application.send_feedback_to_admin") %>');