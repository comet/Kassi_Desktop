%html{html_attrs(I18n.locale).merge({"xmlns:og"=>"http://ogp.me/ns#"})}
  %head
    %title
      Kassi - 
      = t("error_pages.error_#{status}_title")
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" } 
    <link href='/stylesheets/compiled/style.css?1285747368' media='screen' rel='stylesheet' type='text/css' />
    
  %body
    .wrapper
      .js_enabled
        #error.container_24
          .grid_16.prefix_4.suffix_4
            .grid_8.alpha
              #error_content
                = render :partial => "errors/status_#{status}"
                %p
                  = link_to t("error_pages.back_to_kassi_front_page"), "/"
            .grid_8.omega
              #error_kaapo
                <img src="/images/kaapo/sad_kaapo_big.png" alt="Kaapo" />

          .grid_12.prefix_6.suffix_6
            #error_page_feedback_form
              <form accept-charset="UTF-8" action="/en/admin/feedbacks" id="new_error_feedback" method="post"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" />
              <label for="feedback_email">
              = t('error_pages.your_email_address')
              </label> 
              <input class="text_field" id="feedback_email" name="feedback[email]" size="30" type="text" /> 
              <label for="feedback_content">
              = t('error_pages.error_description')
              </label> 
              <textarea class="feedback" cols="40" id="feedback_content" name="feedback[content]" rows="20"></textarea> 
              <input id="feedback_author_id" name="feedback[author_id]" type="hidden" value="Anonymous" /> 
              <input id="feedback_url" name="feedback[url]" type="hidden" value="Error page 500" /> 
              <input class="send_button" id="feedback_submit" name="commit" type="submit" value="#{t('error_pages.send')}" /> 
              </form>
            
            
              

