/* Display a notice */
$("#conversation_notice").html('<div class="conversation_notice"><%= t("layouts.notifications.#{flash[:message_notice]}") %></div');
 
/* Add the new message to the bottom of the message list */
$("#messages").append("<%= escape_javascript(render(:partial => 'conversations/message', :collection => [@message])) %>");
 
/* Reset the message form */
$("#new_message")[0].reset();

/* Enable send button */
$('#new_message input[type=submit]').removeAttr('disabled');
$('#new_message input[type=submit]').val('<%= t("conversations.show.send_reply") %>');